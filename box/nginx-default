

upstream nodejsapp {

	server 127.0.0.1:1408;

}


server {

	server_name d-portal.org;
	
	root /dportal/www;

	location /db {
		sendfile           on;
		sendfile_max_chunk 1m;
	}

	location / {
		proxy_set_header X-Real-IP $remote_addr;
		proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
		proxy_set_header Host $http_host;
		proxy_set_header X-NginX-Proxy true;
		proxy_read_timeout 600s;
		proxy_pass http://nodejsapp;
		proxy_redirect off;
	}

	client_max_body_size 100m;

	listen 80;

#	listen [::]:443 ssl ipv6only=on; # managed by Certbot
#	listen 443 ssl; # managed by Certbot
#	ssl_certificate /etc/letsencrypt/live/portald.wetgenes.com/fullchain.pem; # managed by Certbot
#	ssl_certificate_key /etc/letsencrypt/live/portald.wetgenes.com/privkey.pem; # managed by Certbot
#	include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
#	ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}
